//- layout.jade
doctype html
html(lang='en')
  head
    block title
      title Dialog
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')

    link(rel='shortcut icon', href='/images/favicon.ico', type='image/x-icon')
    link(rel='icon', href='/images/favicon.ico', type='image/x-icon')
    link(rel='stylesheet', href='/css/watson-bootstrap-dark.css')
    link(rel='stylesheet', href='/css/banner.css')
    link(rel='stylesheet', href='/css/style.css')

  body
    div.row.service-container
      div.col-lg-12.service-header
        div.row.top-nav
          div.container
            h3.heading.left IBM 
              span.text-right Watson Developer Cloud
        div.row.header
          div.container
            div.avatar.img-container.col-lg-2.col-md-2.col-sm-2.hidden-xs
              img.service-icon(src='/images/app.png')
            div.col-lg-10.col-md-10.col-sm-10.col-xs-12.dialog-description
              h1.service-title Dialog
              p The Dialog service uses a rules-based system to enable efficient and useful interactions between virtual agents and users.
              div.resource
                img.link-icon(src='/images/link.svg')
                strong Resources:
              div.resource-item-container
                a.resource-item(href='https://dialog-doc-la.mybluemix.net/apis/') API Overview
                a.resource-item(href='https://dialog-doc-la.mybluemix.net/doc/dialog') Documentation
                a.resource-item(href='https://github.com/watson-developer-cloud/dialog-nodejs') Fork on Github
      block row-content

    script(type='text/javascript', src='/js/jquery-1.11.1.min.js')
    script(type='text/javascript', src='/js/index.js')
